# ===========================================
# SuperBryn Backend - Environment Variables
# ===========================================

# App Settings
APP_ENV=development
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/superbryn_db

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# LiveKit
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Deepgram (Speech-to-Text)
DEEPGRAM_API_KEY=your_deepgram_api_key

# Cartesia (Text-to-Speech)
CARTESIA_API_KEY=your_cartesia_api_key

# OpenAI (LLM)
OPENAI_API_KEY=your_openai_api_key

# Beyond Presence (Avatar)
BEYOND_PRESENCE_API_KEY=your_beyond_presence_api_key

# API Base URL (for agent tool calls)
API_BASE_URL=http://localhost:8000
